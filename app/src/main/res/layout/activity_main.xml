<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/textInputEditText"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/name_of_city" />
<TextView
    android:id="@+id/temperature_on_celcius"
    android:text="33"
    android:textSize="60dp"
    android:layout_marginTop="45dp"
    android:layout_centerInParent="true"
    android:layout_below="@+id/textInputEditText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/weather"
        android:textSize="30dp"
        android:text="Lalalalal"
        android:layout_centerInParent="true"
        android:layout_below="@+id/temperature_on_celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <ImageView
        android:id="@+id/imageWeather"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/weather"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>
<Button
    android:id="@+id/search"
    android:layout_centerInParent="true"
    android:onClick="onClickSearch"
    android:hint="@string/search"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
</Button>

    <TextView
        android:text="3333dp"
        android:layout_below="@+id/search"
        android:id="@+id/longithude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
<TextView
    android:text="333dp"
    android:layout_below="@+id/longithude"
    android:id="@+id/latitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>
<TextView
    android:id="@+id/her"
    android:layout_below="@id/latitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>
</RelativeLayout>